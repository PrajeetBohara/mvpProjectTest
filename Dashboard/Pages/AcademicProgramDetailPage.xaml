<?xml version="1.0" encoding="utf-8" ?>
<!-- Code written for Academic Program Detail Page -->
<ContentPage
    x:Class="Dashboard.Pages.AcademicProgramDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Dashboard.Controls"
    Title="Program Details">
    
    <Grid RowDefinitions="Auto,*">
        <!-- Global TopBar -->
        <controls:TopBar Grid.Row="0" />
        
        <!-- Back Button -->
        <Frame Grid.Row="0"
               BackgroundColor="#003087"
               Padding="10"
               HasShadow="True"
               Margin="0,60,0,10"
               ZIndex="10">
            <Button x:Name="BackButton"
                    Text="← Back to Catalogue"
                    BackgroundColor="#002a54"
                    TextColor="White"
                    FontSize="14"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Padding="15,8"
                    HorizontalOptions="Start"
                    Clicked="OnBackButtonClicked" />
        </Frame>
        
        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout x:Name="ContentContainer" Spacing="20">
                <!-- Program Header -->
                <Frame BackgroundColor="#003087"
                       CornerRadius="16"
                       Padding="20"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="ProgramNameLabel"
                               Text="Program Name"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="#FFD204"
                               HorizontalOptions="Center" />
                        <Label x:Name="ProgramFullNameLabel"
                               Text="Full Name"
                               FontSize="18"
                               TextColor="#CCCCCC"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Image Carousel Section -->
                <Frame BackgroundColor="#002a54"
                       CornerRadius="16"
                       Padding="15"
                       HasShadow="True">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <!-- Image Display Area - Larger and more prominent -->
                        <Grid Grid.Row="1"
                              BackgroundColor="#003087"
                              MinimumHeightRequest="600"
                              HeightRequest="600"
                              Margin="0,10">
                            <Image x:Name="ProgramImage"
                                   Source="mcneeselogo.png"
                                   Aspect="AspectFit"
                                   Margin="10"
                                   Opacity="1.0"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnImageTapped" />
                                </Image.GestureRecognizers>
                            </Image>
                            
                            <!-- Navigation Arrows - More visible -->
                            <Grid ColumnDefinitions="Auto,*,Auto"
                                  VerticalOptions="Center"
                                  HorizontalOptions="Fill">
                                <!-- Previous Button -->
                                <Button x:Name="PreviousImageButton"
                                        Grid.Column="0"
                                        Text="‹"
                                        FontSize="48"
                                        FontAttributes="Bold"
                                        BackgroundColor="#CCFFD204"
                                        TextColor="#003087"
                                        WidthRequest="60"
                                        HeightRequest="60"
                                        CornerRadius="30"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Start"
                                        Margin="15,0,0,0"
                                        Clicked="OnPreviousImageClicked"
                                        IsVisible="False"
                                        Opacity="0.9" />
                                
                                <!-- Next Button -->
                                <Button x:Name="NextImageButton"
                                        Grid.Column="2"
                                        Text="›"
                                        FontSize="48"
                                        FontAttributes="Bold"
                                        BackgroundColor="#CCFFD204"
                                        TextColor="#003087"
                                        WidthRequest="60"
                                        HeightRequest="60"
                                        CornerRadius="30"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Margin="0,0,15,0"
                                        Clicked="OnNextImageClicked"
                                        IsVisible="False"
                                        Opacity="0.9" />
                            </Grid>
                        </Grid>
                        
                        <!-- Image Counter -->
                        <Label x:Name="ImageCounterLabel"
                               Grid.Row="2"
                               Text="Page 1 of 1"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#FFD204"
                               HorizontalOptions="Center"
                               Margin="0,15,0,10" />
                    </Grid>
                </Frame>
                
                <!-- Description Section -->
                <Frame BackgroundColor="#002a54"
                       CornerRadius="12"
                       Padding="20"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="About This Program"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#FFD204" />
                        <Label x:Name="DescriptionLabel"
                               Text="Description will appear here"
                               FontSize="14"
                               TextColor="#CCCCCC"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>

