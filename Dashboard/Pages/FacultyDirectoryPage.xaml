        <!-- ====================== FULL-SCREEN RESEARCH DETAILS MODAL ====================== -->
        <Grid x:Name="ResearchModalOverlay"
              Grid.RowSpan="2"
              BackgroundColor="#80000000"
              IsVisible="False"
              ZIndex="1000">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnModalBackgroundTapped" />
            </Grid.GestureRecognizers>
            
            <Frame BackgroundColor="#003087"
                   CornerRadius="20"
                   Padding="0"
                   HasShadow="True"
                   Margin="20"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"
                   ZIndex="1001">
                <Grid RowDefinitions="Auto,*">
                    <!-- Modal Header with Close Button -->
                    <Grid Grid.Row="0" 
                          BackgroundColor="#002a54"
                          Padding="20,15"
                          ColumnDefinitions="*,Auto">
                        <Label x:Name="ModalProfessorName"
                               Text="Dr. Jennifer Lavergne"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#FFD204"
                               VerticalOptions="Center"
                               Grid.Column="0" />
                        <Button x:Name="CloseModalButton"
                                Text="âœ•"
                                FontSize="24"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="20"
                                Grid.Column="1"
                                Clicked="OnCloseModalClicked" />
                    </Grid>
                    
                    <!-- Scrollable Research Content -->
                    <ScrollView Grid.Row="1" Padding="25">
                        <VerticalStackLayout x:Name="ModalResearchContent" Spacing="20">
                            <!-- Content will be populated dynamically -->
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Frame>
        </Grid>
