                               CornerRadius="0"
                               Padding="20"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="20">
                                <!-- Row 1: Alphabetically by last name - Anderson, Lavergne, Menon -->
                                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                                    <!-- Ms. Rhonda Anderson (A) -->
                                    <Frame Grid.Column="0" BackgroundColor="#002a54" CornerRadius="8" Padding="15" HasShadow="False">
