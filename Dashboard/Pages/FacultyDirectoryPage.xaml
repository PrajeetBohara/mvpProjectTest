                                                        <EllipseGeometry Center="40,40" RadiusX="40" RadiusY="40" />
                                                    </Image.Clip>
                                                </Image>
                                            </Frame>
                                            <Label Text="Ms. Rhonda Anderson" FontSize="14" FontAttributes="Bold" TextColor="#FFD204" HorizontalOptions="Center" />
                                            <Label Text="Instructor" FontSize="12" TextColor="#CCCCCC" HorizontalOptions="Center" />
                                            <Label Text="randerson@mcneese.edu" FontSize="10" TextColor="#00aeef" HorizontalOptions="Center" />
