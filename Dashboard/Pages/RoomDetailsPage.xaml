<?xml version="1.0" encoding="utf-8" ?>
<!-- Code written for Room Details Page -->
<ContentPage
    x:Class="Dashboard.Pages.RoomDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Dashboard.Controls"
    Title="Room Details">

    <Grid RowDefinitions="Auto,*">
        <!-- Global TopBar -->
        <controls:TopBar Grid.Row="0" />
        
        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">
                
                <!-- Room Number Header -->
                <Frame BackgroundColor="#003087"
                       CornerRadius="16"
                       Padding="25"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="RoomNumberLabel"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="#FFD204"
                               HorizontalOptions="Center" />
                        <Label x:Name="RoomNameLabel"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Room Information Card -->
                <Frame BackgroundColor="#002a54"
                       CornerRadius="12"
                       Padding="20"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Room Information"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#FFD204" />
                        
                        <!-- Room Type -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Type:"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   WidthRequest="100" />
                            <Label x:Name="RoomTypeLabel"
                                   FontSize="16"
                                   TextColor="#CCCCCC" />
                        </HorizontalStackLayout>
                        
                        <!-- Square Footage -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Size:"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   WidthRequest="100" />
                            <Label x:Name="SquareFootageLabel"
                                   FontSize="16"
                                   TextColor="#CCCCCC" />
                        </HorizontalStackLayout>
                        
                        <!-- Professor Name (if applicable) -->
                        <HorizontalStackLayout x:Name="ProfessorNameContainer"
                                               Spacing="10"
                                               IsVisible="False">
                            <Label Text="Professor:"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   WidthRequest="100" />
                            <Label x:Name="ProfessorNameLabel"
                                   FontSize="16"
                                   TextColor="#CCCCCC" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Description Card -->
                <Frame x:Name="DescriptionCard"
                       BackgroundColor="#002a54"
                       CornerRadius="12"
                       Padding="20"
                       HasShadow="True"
                       IsVisible="False">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Description"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#FFD204" />
                        <Label x:Name="DescriptionLabel"
                               FontSize="16"
                               TextColor="#CCCCCC"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Back Button -->
                <Button x:Name="BackButton"
                        Text="â† Back to Map"
                        BackgroundColor="#FFD204"
                        TextColor="#003087"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        Padding="20,15"
                        HeightRequest="55"
                        Clicked="OnBackButtonClicked" />
                
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>

