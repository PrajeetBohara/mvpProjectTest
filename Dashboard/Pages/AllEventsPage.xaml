<!---Code written by Prajeet Bohara with the help of template provided by .NET MAUI
This code file gives UI for the All events page-->
<ContentPage
    x:Class="Dashboard.Pages.AllEventsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Dashboard.Controls"
    Title="All Important Dates">

    <Grid RowDefinitions="Auto,*">
        <!-- Global TopBar that is always visible on top -->
        <controls:TopBar ZIndex="10" Grid.Row="0" />
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*" Padding="20">
            <Label Grid.Row="0"
                   Text="All Important Dates"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#003087"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />
            
            <!-- Important Dates List -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Spacing="15">
                        
                        <!-- Date 1 -->
                        <Frame BackgroundColor="#003087"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Classes end"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#FFD204" />
                                <Label Text="December 8"
                                       FontSize="16"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Date 2 -->
                        <Frame BackgroundColor="#003087"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Last day to remove &quot;I&quot; grades from previous semester"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#FFD204"
                                       LineBreakMode="WordWrap" />
                                <Label Text="December 8"
                                       FontSize="16"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Date 3 -->
                        <Frame BackgroundColor="#003087"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Study Day"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#FFD204" />
                                <Label Text="December 9"
                                       FontSize="16"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Date 4 -->
                        <Frame BackgroundColor="#003087"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Final exams begin"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#FFD204" />
                                <Label Text="December 10"
                                       FontSize="16"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Date 5 -->
                        <Frame BackgroundColor="#003087"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Final exams end"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#FFD204" />
                                <Label Text="December 13"
                                       FontSize="16"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Date 6 -->
                        <Frame BackgroundColor="#003087"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Grades due at 8:30am for graduating students"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#FFD204"
                                       LineBreakMode="WordWrap" />
                                <Label Text="December 15"
                                       FontSize="16"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Date 7 -->
                        <Frame BackgroundColor="#003087"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Final grades due by 8:30 am for all remaining students"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#FFD204"
                                       LineBreakMode="WordWrap" />
                                <Label Text="December 17"
                                       FontSize="16"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Date 8 -->
                        <Frame BackgroundColor="#003087"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Commencement"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#FFD204" />
                                <Label Text="December 19"
                                       FontSize="16"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Date 9 -->
                        <Frame BackgroundColor="#003087"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Final grades available online"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#FFD204"
                                       LineBreakMode="WordWrap" />
                                <Label Text="December 19"
                                       FontSize="16"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Date 10 -->
                        <Frame BackgroundColor="#003087"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="University closes"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#FFD204" />
                                <Label Text="December 19"
                                       FontSize="16"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                        
                    </VerticalStackLayout>
                </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
