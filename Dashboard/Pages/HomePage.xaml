<?xml version="1.0" encoding="utf-8" ?>
<!-- Code written by Prajeet Bohara with the help of ContentPage template provided by .NET MAUI framework -->
<ContentPage
    x:Class="Dashboard.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Dashboard.Controls"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Global TopBar (Always visible) -->
        <controls:TopBar ZIndex="10" Grid.Row="0" />

        <!-- Main 2x2 area -->
        <Grid Grid.Row="1"
              Padding="10"
              RowDefinitions="3*,1*"
              ColumnDefinitions="3*,1*">

            <!-- Background watermark -->
            <Image Source="mcneeselogo.png"
                   Aspect="AspectFill"
                   Opacity="0.1"
                  
                   Grid.ColumnSpan="2" />

            <!-- ====================== TOP-LEFT: Slideshow ====================== -->
            <Grid Grid.Row="0" Grid.Column="0">
                <Frame BackgroundColor="#003087"
                       CornerRadius="12"
                       Padding="0"
                       HasShadow="True"
                       Margin="0,0,10,10">
                    <Grid>
                        <Frame BackgroundColor="#002a54"
                               CornerRadius="12"
                               Padding="0"
                               HasShadow="False"
                               Margin="2">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSlideshowTapped" />
                            </Frame.GestureRecognizers>

                            <Grid>
                                <!-- Dynamic Image from Supabase (will be updated in code-behind) -->
                                <Image x:Name="SlideshowImage"
                                       Source="mcneeselogo.png"
                                       Aspect="AspectFill"
                                       Opacity="1.0"
                                       HorizontalOptions="Fill"
                                       VerticalOptions="Fill"
                                       ZIndex="0" />

                            <!-- Text labels removed - slideshow displays only images -->

                                <!-- Pagination Dots (will be populated dynamically) -->
                                <HorizontalStackLayout x:Name="PaginationContainer"
                                                       HorizontalOptions="Center"
                                                   VerticalOptions="End"
                                                       Spacing="0"
                                                       Margin="0,0,0,30"
                                                       ZIndex="1">
                                    <!-- Dots will be added programmatically -->
                            </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </Frame>
            </Grid>

            <!-- ====================== LEFT-BOTTOM: Quick Access Sections ====================== -->
            <Grid Grid.Row="1" Grid.Column="0">
                <HorizontalStackLayout Spacing="40" 
                                       VerticalOptions="Center"
                                       HorizontalOptions="Start"
                                       Margin="0,10,10,0">
                    
                    <!-- Maps Section -->
                    <Frame BackgroundColor="Transparent"
                           CornerRadius="12"
                           Padding="20,12,20,12"
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMapsTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="18">
                            <Label Text="ðŸ—ºï¸"
                                   FontSize="{OnPlatform Default=36, Android=28, iOS=36}"
                                   HorizontalOptions="Center" />
                            <Label Text="Maps"
                                   FontSize="{OnPlatform Default=14, Android=12, iOS=14}"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Contact Section -->
                    <Frame BackgroundColor="Transparent"
                           CornerRadius="12"
                           Padding="20,12,20,12"
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnContactTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="18">
                            <Label Text="ðŸ“ž"
                                   FontSize="{OnPlatform Default=36, Android=28, iOS=36}"
                                   HorizontalOptions="Center" />
                            <Label Text="Contact"
                                   FontSize="{OnPlatform Default=14, Android=12, iOS=14}"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Labs Section -->
                    <Frame BackgroundColor="Transparent"
                           CornerRadius="12"
                           Padding="20,12,20,12"
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLabsTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="18">
                            <Label Text="ðŸ”¬"
                                   FontSize="{OnPlatform Default=36, Android=28, iOS=36}"
                                   HorizontalOptions="Center" />
                            <Label Text="Labs"
                                   FontSize="{OnPlatform Default=14, Android=12, iOS=14}"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Projects Section -->
                    <Frame BackgroundColor="Transparent"
                           CornerRadius="12"
                           Padding="20,12,20,12"
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProjectsTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="18">
                            <Label Text="ðŸš€"
                                   FontSize="{OnPlatform Default=36, Android=28, iOS=36}"
                                   HorizontalOptions="Center" />
                            <Label Text="Projects"
                                   FontSize="{OnPlatform Default=14, Android=12, iOS=14}"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Faculty Directory Section -->
                    <Frame BackgroundColor="Transparent"
                           CornerRadius="12"
                           Padding="20,12,20,12"
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFacultyDirectoryTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="18">
                            <Label Text="ðŸ‘¨â€ðŸ«"
                                   FontSize="{OnPlatform Default=36, Android=28, iOS=36}"
                                   HorizontalOptions="Center" />
                            <Label Text="Faculty"
                                   FontSize="{OnPlatform Default=14, Android=12, iOS=14}"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Student Clubs Section -->
                    <Frame BackgroundColor="Transparent"
                           CornerRadius="12"
                           Padding="20,12,20,12"
                           HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStudentClubsTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="18">
                            <Label Text="ðŸŽ“"
                                   FontSize="{OnPlatform Default=36, Android=28, iOS=36}"
                                   HorizontalOptions="Center" />
                            <Label Text="Clubs"
                                   FontSize="{OnPlatform Default=14, Android=12, iOS=14}"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black" />
                        </VerticalStackLayout>
                    </Frame>

                </HorizontalStackLayout>
            </Grid>


            <!-- ====================== RIGHT SIDE CONTAINER (spans both rows) ====================== -->
            <!-- Makes Events a bit shorter and Announcements taller -->
            <Grid Grid.Column="1" Grid.Row="0"
                  RowDefinitions="1*,1.5*">
                <!-- adjust ratios as you like -->

                <!-- TOP-RIGHT: Upcoming Events (slightly smaller) -->
                <Frame Grid.Row="0"
                       BackgroundColor="#003087"
                       CornerRadius="12"
                       Padding="12"
                       HasShadow="True"
                       Margin="10,0,15,6">
                    <ScrollView HorizontalScrollBarVisibility="Never"
                                VerticalScrollBarVisibility="Default">
                        <VerticalStackLayout Spacing="8"
                                             HorizontalOptions="Fill">
                            <Label Text="ðŸ“… Upcoming Events"
                                   FontSize="{OnPlatform Default=14, Android=12, iOS=12}"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />

                            <VerticalStackLayout Spacing="6"
                                                 HorizontalOptions="Fill">
                                <Frame BackgroundColor="#002a54" 
                                       CornerRadius="6" 
                                       Padding="8" 
                                       HasShadow="False"
                                       HorizontalOptions="Fill"
                                       Margin="0,0,9,0">
                                    <VerticalStackLayout Spacing="3"
                                                         HorizontalOptions="Fill">
                                        <Label Text="Engineering Career Fair"
                                               FontSize="{OnPlatform Default=10, Android=9, iOS=9}"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               LineBreakMode="WordWrap" />
                                        <Label Text="Friday, Sep 27"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#FFD204"
                                               HorizontalOptions="Center" />
                                        <Label Text="10:00 AM"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#FFD204"
                                               HorizontalOptions="Center" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame BackgroundColor="#002a54" 
                                       CornerRadius="6" 
                                       Padding="8" 
                                       HasShadow="False"
                                       HorizontalOptions="Fill"
                                       Margin="0,0,9,0">
                                    <VerticalStackLayout Spacing="3"
                                                         HorizontalOptions="Fill">
                                        <Label Text="CS Department Meeting"
                                               FontSize="{OnPlatform Default=10, Android=9, iOS=9}"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               LineBreakMode="WordWrap" />
                                        <Label Text="Monday, Sep 30"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#f2b32e"
                                               HorizontalOptions="Center" />
                                        <Label Text="2:00 PM"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#f2b32e"
                                               HorizontalOptions="Center" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame BackgroundColor="#002a54" 
                                       CornerRadius="6" 
                                       Padding="8" 
                                       HasShadow="False"
                                       HorizontalOptions="Fill"
                                       Margin="0,0,9,0">
                                    <VerticalStackLayout Spacing="3"
                                                         HorizontalOptions="Fill">
                                        <Label Text="Student Club Expo"
                                               FontSize="{OnPlatform Default=10, Android=9, iOS=9}"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               LineBreakMode="WordWrap" />
                                        <Label Text="Wednesday, Oct 2"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#00aeef"
                                               HorizontalOptions="Center" />
                                        <Label Text="1:00 PM"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#00aeef"
                                               HorizontalOptions="Center" />
                                    </VerticalStackLayout>
                                </Frame>
                            </VerticalStackLayout>

                            <Button Text="View All Events"
                                    BackgroundColor="#002a54"
                                    TextColor="White"
                                    CornerRadius="6"
                                    FontSize="{OnPlatform Default=9, Android=8, iOS=8}"
                                    HorizontalOptions="Fill"
                                    Clicked="OnViewAllEventsClicked" />
                        </VerticalStackLayout>
                    </ScrollView>
                </Frame>

                <!-- BOTTOM-RIGHT: Announcements (expanded upward) -->
                <Frame Grid.Row="1"
                       BackgroundColor="#003087"
                       CornerRadius="12"
                       Padding="12"
                       HasShadow="True"
                       Margin="10,6,10,0">
                    <ScrollView HorizontalScrollBarVisibility="Never"
                                VerticalScrollBarVisibility="Default">
                        <VerticalStackLayout Spacing="12"
                                             HorizontalOptions="Fill">
                            <Label Text="ðŸ“¢ Announcements"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   FontSize="{OnPlatform Default=16, Android=14, iOS=14}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />

                            <VerticalStackLayout Spacing="8"
                                                 HorizontalOptions="Fill">
                                <Frame BackgroundColor="#002a54" 
                                       CornerRadius="8" 
                                       Padding="10"
                                       HorizontalOptions="Fill"
                                       Margin="0,0,9,0">
                                    <VerticalStackLayout Spacing="4"
                                                         HorizontalOptions="Fill">
                                        <Label Text="Spring 2024 Registration"
                                               TextColor="#FFD204"
                                               FontSize="{OnPlatform Default=12, Android=10, iOS=10}"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               LineBreakMode="WordWrap" />
                                        <Label Text="Registration opens Nov 1st"
                                               TextColor="White"
                                               FontSize="{OnPlatform Default=10, Android=9, iOS=9}"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               LineBreakMode="WordWrap" />
                                        <Label Text="2 hours ago"
                                               TextColor="#CCCCCC"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               HorizontalOptions="Center" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame BackgroundColor="#002a54" 
                                       CornerRadius="8" 
                                       Padding="10"
                                       HorizontalOptions="Fill"
                                       Margin="0,0,9,0">
                                    <VerticalStackLayout Spacing="4"
                                                         HorizontalOptions="Fill">
                                        <Label Text="Lab Equipment"
                                               TextColor="#f2b32e"
                                               FontSize="{OnPlatform Default=12, Android=10, iOS=10}"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               LineBreakMode="WordWrap" />
                                        <Label Text="High-performance workstations available"
                                               TextColor="White"
                                               FontSize="{OnPlatform Default=10, Android=9, iOS=9}"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               LineBreakMode="WordWrap" />
                                        <Label Text="1 day ago"
                                               TextColor="#CCCCCC"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               HorizontalOptions="Center" />
                                    </VerticalStackLayout>
                                </Frame>
                            </VerticalStackLayout>

                            <Button Text="View All Announcements"
                                    BackgroundColor="#FFD204"
                                    TextColor="#003087"
                                    FontSize="{OnPlatform Default=9, Android=8, iOS=8}"
                                    CornerRadius="6"
                                    HeightRequest="35"
                                    HorizontalOptions="Fill"
                                    Clicked="OnViewAllAnnouncementsClicked" />
                        </VerticalStackLayout>
                    </ScrollView>
                </Frame>
            </Grid>
            <!-- ====================== END RIGHT SIDE ====================== -->

        </Grid>
    </Grid>
</ContentPage>
