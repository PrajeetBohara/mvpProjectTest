                       CornerRadius="12"
                       Padding="0"
                       HasShadow="True"
                       Margin="0,0,10,10">
                    <Grid>
                        <Frame BackgroundColor="#002a54"
                               CornerRadius="12"
                               Padding="0"
                               HasShadow="False"
                               Margin="2">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSlideshowTapped" />
                            </Frame.GestureRecognizers>

                            <Grid>
                                <!-- Dynamic Image from Supabase (will be updated in code-behind) -->
                                <Image x:Name="SlideshowImage"
                                       Source="mcneeselogo.png"
                                       Aspect="AspectFill"
                                       Opacity="1.0"
                                       HorizontalOptions="Fill"
                                       VerticalOptions="Fill"
                                       ZIndex="0" />

                            <!-- Text labels removed - slideshow displays only images -->

                                <!-- Pagination Dots (will be populated dynamically) -->
                                <HorizontalStackLayout x:Name="PaginationContainer"
                                                       HorizontalOptions="Center"
                                                   VerticalOptions="End"
                                                       Spacing="0"
                                                       Margin="0,0,0,30"
                                                       ZIndex="1">
