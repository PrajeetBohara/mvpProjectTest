<?xml version="1.0" encoding="utf-8" ?>
<!-- Code written by Prajeet Bohara with the help of ContentPage template provided by .NET MAUI framework -->
<ContentPage
    x:Class="Dashboard.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Dashboard.Controls"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Global TopBar (Always visible) -->
        <controls:TopBar Grid.Row="0" />

        <!-- Main 2x2 area -->
        <Grid Grid.Row="1"
              Padding="10"
              RowDefinitions="3*,1*"
              ColumnDefinitions="3*,1*">

            <!-- Background watermark -->
            <Image Source="mcneeselogo.png"
                   Aspect="AspectFill"
                   Opacity="0.1"
                   Grid.RowSpan="2"
                   Grid.ColumnSpan="2" />

            <!-- ====================== TOP-LEFT: Slideshow ====================== -->
            <Grid Grid.Row="0" Grid.Column="0">
                <Frame BackgroundColor="#1C2028"
                       CornerRadius="12"
                       Padding="0"
                       HasShadow="True"
                       Margin="0,0,10,10">
                    <Grid>
                        <Frame BackgroundColor="#2A2F3A"
                               CornerRadius="12"
                               Padding="0"
                               HasShadow="False"
                               Margin="2">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSlideshowTapped" />
                            </Frame.GestureRecognizers>

                            <Image Source="dotnet_bot.png"
                                   Aspect="AspectFill"
                                   Opacity="0.3" />

                            <VerticalStackLayout VerticalOptions="Center"
                                                 HorizontalOptions="Center"
                                                 Spacing="15">
                                <Label Text="ðŸŽ¬"
                                       FontSize="{OnPlatform Default=80, Android=70, iOS=70}"
                                       TextColor="White" />
                                <Label Text="Slide SHOW"
                                       FontSize="{OnPlatform Default=36, Android=32, iOS=32}"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="Student Projects &amp; Achievements"
                                       FontSize="{OnPlatform Default=18, Android=16, iOS=16}"
                                       TextColor="#CCCCCC" />
                                <Label Text="Tap to view slideshow"
                                       FontSize="{OnPlatform Default=16, Android=14, iOS=14}"
                                       TextColor="#4CAF50" />
                            </VerticalStackLayout>

                            <HorizontalStackLayout HorizontalOptions="Center"
                                                   VerticalOptions="End"
                                                   Spacing="12"
                                                   Margin="0,0,0,30">
                                <BoxView WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="White" />
                                <BoxView WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="#666666" />
                                <BoxView WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="#666666" />
                                <BoxView WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="#666666" />
                            </HorizontalStackLayout>
                        </Frame>
                    </Grid>
                </Frame>
            </Grid>

            <!-- ====================== LEFT-BOTTOM: Maps (far left like before) ====================== -->
            <Grid Grid.Row="1" Grid.Column="0">
                <Frame BackgroundColor="Transparent"
                       CornerRadius="12"
                       Padding="16"
                       HasShadow="False"
                       Margin="0,10,10,0"
                       HorizontalOptions="Start">

                    <Grid>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMapsTapped" />
                        </Grid.GestureRecognizers>

                        <VerticalStackLayout VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="8">
                            <Label Text="ðŸ—ºï¸"
                                   FontSize="{OnPlatform Default=48, Android=36, iOS=48}"
                                   HorizontalOptions="Center" />
                            <Label Text="Maps"
                                   FontSize="{OnPlatform Default=20, Android=8, iOS=18}"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </Grid>

            <!-- ====================== RIGHT SIDE CONTAINER (spans both rows) ====================== -->
            <!-- Makes Events a bit shorter and Announcements taller -->
            <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                  RowDefinitions="1*,1.5*">
                <!-- adjust ratios as you like -->

                <!-- TOP-RIGHT: Upcoming Events (slightly smaller) -->
                <Frame Grid.Row="0"
                       BackgroundColor="#1C2028"
                       CornerRadius="12"
                       Padding="16"
                       HasShadow="True"
                       Margin="10,0,10,6">
                    <ScrollView>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="ðŸ“… Upcoming Events"
                                   FontSize="{OnPlatform Default=14, Android=12, iOS=12}"
                                   FontAttributes="Bold"
                                   TextColor="White" />

                            <VerticalStackLayout Spacing="6">
                                <Frame BackgroundColor="#2A2F3A" CornerRadius="6" Padding="6" HasShadow="False">
                                    <VerticalStackLayout Spacing="3">
                                        <Label Text="Engineering Career Fair"
                                               FontSize="{OnPlatform Default=10, Android=9, iOS=9}"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        <Label Text="Friday, Sep 27"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#4CAF50" />
                                        <Label Text="10:00 AM"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#4CAF50" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame BackgroundColor="#2A2F3A" CornerRadius="6" Padding="6" HasShadow="False">
                                    <VerticalStackLayout Spacing="3">
                                        <Label Text="CS Department Meeting"
                                               FontSize="{OnPlatform Default=10, Android=9, iOS=9}"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        <Label Text="Monday, Sep 30"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#FF9800" />
                                        <Label Text="2:00 PM"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#FF9800" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame BackgroundColor="#2A2F3A" CornerRadius="6" Padding="6" HasShadow="False">
                                    <VerticalStackLayout Spacing="3">
                                        <Label Text="Student Club Expo"
                                               FontSize="{OnPlatform Default=10, Android=9, iOS=9}"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        <Label Text="Wednesday, Oct 2"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#2196F3" />
                                        <Label Text="1:00 PM"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}"
                                               TextColor="#2196F3" />
                                    </VerticalStackLayout>
                                </Frame>
                            </VerticalStackLayout>

                            <Button Text="View All Events"
                                    BackgroundColor="#2A2F3A"
                                    TextColor="White"
                                    CornerRadius="6"
                                    FontSize="{OnPlatform Default=9, Android=8, iOS=8}"
                                    Clicked="OnViewAllEventsClicked" />
                        </VerticalStackLayout>
                    </ScrollView>
                </Frame>

                <!-- BOTTOM-RIGHT: Announcements (expanded upward) -->
                <Frame Grid.Row="1"
                       BackgroundColor="#1C2028"
                       CornerRadius="12"
                       Padding="12"
                       HasShadow="True"
                       Margin="16,6,8,0">
                    <ScrollView>
                        <VerticalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢ Announcements"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                   FontSize="{OnPlatform Default=16, Android=14, iOS=14}"
                                   HorizontalOptions="Center" />

                            <VerticalStackLayout Spacing="8">
                                <Frame BackgroundColor="#2A2F3A" CornerRadius="8" Padding="12">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="Spring 2024 Registration"
                                               TextColor="#4CAF50"
                                               FontSize="{OnPlatform Default=12, Android=10, iOS=10}" />
                                        <Label Text="Registration opens Nov 1st"
                                               TextColor="White"
                                               FontSize="{OnPlatform Default=10, Android=9, iOS=9}" />
                                        <Label Text="2 hours ago"
                                               TextColor="#CCCCCC"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame BackgroundColor="#2A2F3A" CornerRadius="8" Padding="12">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="Lab Equipment"
                                               TextColor="#FF9800"
                                               FontSize="{OnPlatform Default=12, Android=10, iOS=10}" />
                                        <Label Text="High-performance workstations available"
                                               TextColor="White"
                                               FontSize="{OnPlatform Default=10, Android=9, iOS=9}" />
                                        <Label Text="1 day ago"
                                               TextColor="#CCCCCC"
                                               FontSize="{OnPlatform Default=8, Android=7, iOS=7}" />
                                    </VerticalStackLayout>
                                </Frame>
                            </VerticalStackLayout>

                            <Button Text="View All Announcements"
                                    BackgroundColor="#FF9800"
                                    TextColor="White"
                                    FontSize="{OnPlatform Default=9, Android=8, iOS=8}"
                                    CornerRadius="6"
                                    HeightRequest="35"
                                    
                                    Clicked="OnViewAllAnnouncementsClicked" />
                        </VerticalStackLayout>
                    </ScrollView>
                </Frame>
            </Grid>
            <!-- ====================== END RIGHT SIDE ====================== -->

        </Grid>
    </Grid>
</ContentPage>
