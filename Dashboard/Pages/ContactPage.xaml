                                                   VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="8">
                                            <Label Text="ðŸ“"
                                                   FontSize="16"
                                                   VerticalOptions="Center" />
                                            <Label Text="Office: Drew 141"
                                                   FontSize="14"
                                                   TextColor="#CCCCCC"
                                                   VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>

                            <!-- Sarah Reddoch -->
                            <Frame BackgroundColor="#002a54"
                                   CornerRadius="12"
                                   Padding="20"
                                   HasShadow="False">
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="20">
                                    <!-- Profile Image -->
                                    <Border Grid.Column="0"
                                            WidthRequest="100"
                                            HeightRequest="100"
                                            StrokeThickness="3"
                                            Stroke="#FFD204"
                                            StrokeShape="RoundRectangle 50">
                                        <Image x:Name="ReddochImage"
                                               Source="{x:Null}"
                                               Aspect="AspectFill"
                                               WidthRequest="100"
                                               HeightRequest="100">
                                            <Image.Clip>
                                                <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50" />
                                            </Image.Clip>
                                        </Image>
                                    </Border>

                                    <!-- Contact Info -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="8">
                                        <Label Text="Sarah Reddoch"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        <Label Text="Administrative Assistant"
                                               FontSize="14"
