                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>

                            <!-- Social Media Links -->
                            <Frame BackgroundColor="#002a54"
                                   CornerRadius="12"
                                   Padding="20"
                                   HasShadow="False">
                                <VerticalStackLayout Spacing="15">
                                    <Label Text="Connect With Us"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <VerticalStackLayout Spacing="15">
                                        <VerticalStackLayout Spacing="5">
                                            <Label Text="Facebook"
                                                   FontSize="14"
                                                   TextColor="#CCCCCC" />
