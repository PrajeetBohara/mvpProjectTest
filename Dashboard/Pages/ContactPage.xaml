                                   CornerRadius="12"
                                   Padding="20"
                                   HasShadow="False">
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="20">
                                    <!-- Profile Image -->
                                    <Border Grid.Column="0"
                                            WidthRequest="100"
                                            HeightRequest="100"
                                            StrokeThickness="3"
                                            Stroke="#FFD204"
                                            StrokeShape="RoundRectangle 50">
                                        <Image x:Name="AmbatipatiImage"
                                               Source="{x:Null}"
                                               Aspect="AspectFill"
                                               WidthRequest="100"
                                               HeightRequest="100">
                                            <Image.Clip>
                                                <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50" />
                                            </Image.Clip>
                                        </Image>
                                    </Border>

                                    <!-- Contact Info -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="8">
                                        <Label Text="Srinivasan Ambatipati"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        <Label Text="Department Head"
                                               FontSize="14"
                                               TextColor="#FFD204" />
                                        <Label Text="Department of Engineering and Computer Science"
                                               FontSize="14"
                                               TextColor="#CCCCCC" />
