                           FontSize="48"
                           HorizontalOptions="Center" />
                    <Label Text="Contact Information"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#003087"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>

                <!-- Department Contact Section -->
                <Frame BackgroundColor="#003087"
                       CornerRadius="16"
                       Padding="0"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="0">
                        <!-- Section Header -->
                        <Frame BackgroundColor="#002a54"
                               CornerRadius="0"
                               Padding="20"
                               HasShadow="False">
                            <Label Text="Department Contact"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#FFD204" />
                        </Frame>

                        <!-- Contact Cards Container -->
                        <VerticalStackLayout Spacing="15" Padding="20">
                            
