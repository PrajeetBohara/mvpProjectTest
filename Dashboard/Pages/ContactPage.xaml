                                <VerticalStackLayout Spacing="10">
                                    <Label Text="McNeese State University"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label Text="4205 Ryan St, Lake Charles, LA 70605"
                                           FontSize="14"
                                           TextColor="#CCCCCC" />
                                    <Label Text="800-622-3352"
                                           FontSize="16"
                                           TextColor="#FFD204" />
                                </VerticalStackLayout>
                            </Frame>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>
                
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
