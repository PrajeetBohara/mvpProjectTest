<?xml version="1.0" encoding="utf-8" ?>
<!-- Code written for Labs Page -->
<ContentPage
    x:Class="Dashboard.Pages.LabsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Dashboard.Controls"
    Title="Labs">

    <Grid RowDefinitions="Auto,*">
        <!-- Global TopBar -->
        <controls:TopBar ZIndex="10" Grid.Row="0" />
        
        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="25">
                <!-- Page Header -->
                <VerticalStackLayout Spacing="8" HorizontalOptions="Center" Margin="0,0,0,20">
                    <Label Text="ðŸ”¬"
                           FontSize="48"
                           HorizontalOptions="Center" />
                    <Label Text="Labs"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#003087"
                           HorizontalOptions="Center" />
                    <Label Text="Explore McNeese state-of-the-art research and teaching facilities"
                           FontSize="16"
                           TextColor="#002a54"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

                <!-- Labs Container -->
                <VerticalStackLayout x:Name="LabsContainer" Spacing="25">
                    <!-- Labs will be added programmatically -->
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
