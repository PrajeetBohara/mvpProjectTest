<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Dashboard.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Dashboard.Pages"
    xmlns:controls="clr-namespace:Dashboard.Controls"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">

    <!-- Flyout header (optional for future use) 
    <FlyoutHeader>
        <Grid Padding="16" BackgroundColor="#111318">
            <Label Text="ENCS Dashboard"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="20" />
        </Grid>
    </FlyoutHeader>
    -->

    <!-- Flyout items  -->
    <FlyoutItem Title="Home" Route="Home">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate pages:HomePage}" />
    </FlyoutItem>

    <!-- Student Clubs -->
    <FlyoutItem Title="Student Clubs" Route="Clubs">
        <ShellContent Title="Student Clubs" ContentTemplate="{DataTemplate pages:StudentClubsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Projects" Route="Senior Projects">
        <ShellContent Title="Senior Design Projects">
            <ContentPage>
                <Grid RowDefinitions="Auto,*">
                    <controls:TopBar ZIndex="10" Grid.Row="0" />
                    <Grid Grid.Row="1" Padding="24">
                        <Label Text="Senior Design Projects Page (placeholder)" TextColor="White" />
                    </Grid>
                </Grid>
            </ContentPage>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="E-Week" Route="E-Week">
        <ShellContent Title="E-Week" ContentTemplate="{DataTemplate pages:EWeekPage}" />
    </FlyoutItem>


    <FlyoutItem Title="Academic Catalogue" Route="AcademicCatalogue">
        <ShellContent Title="Academic Catalogue" ContentTemplate="{DataTemplate pages:AcademicCataloguePage}" />
    </FlyoutItem>

    <!-- Additional routes for View All pages -->
    <FlyoutItem Title="All Events" Route="AllEvents">
        <ShellContent Title="All Events" ContentTemplate="{DataTemplate pages:AllEventsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="All Announcements" Route="AllAnnouncements">
        <ShellContent Title="All Announcements" ContentTemplate="{DataTemplate pages:AllAnnouncementsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Faculty Directory" Route="Faculty">
        <ShellContent Title="Faculty Directory" ContentTemplate="{DataTemplate pages:FacultyDirectoryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Sponsors and Donors" Route="SponsorsAndDonors">
        <ShellContent Title="Sponsors and Donors" ContentTemplate="{DataTemplate pages:SponsorsAndDonorsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Labs" Route="Labs">
        <ShellContent Title="Labs" ContentTemplate="{DataTemplate pages:LabsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Contact" Route="Contact">
        <ShellContent Title="Contact" ContentTemplate="{DataTemplate pages:ContactPage}" />
    </FlyoutItem>

</Shell>
